    </div>*@

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@
    <!-- Scripts -->


    <script>
        $(function () {
            $(".accordion").accordion({
                // optional plugin customization in key value pairs
                collapsible: true,
                heightStyle: "content"
            });
        });

        function toggleNav() {
            //Toggle Nav Menu
            let navList = document.getElementById("navbarResponsive");
            navList.classList.toggle('expandedClass');
            //Toggle Hamburger button/Close button
            let btnMenu = document.getElementById("menu-btn");
            if (navList.classList.contains("expandedClass")) {
                btnMenu.innerHTML = "&times;";
            } else {
                btnMenu.innerHTML = "&#9776;";
            }
        }
    </script>
    
    @RenderSection("scripts", required: false)
</body>
</html>
