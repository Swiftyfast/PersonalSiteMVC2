        <!-- Masthead Heading-->
        <h1 class="masthead-heading text-uppercase mb-0 blackText">Welcome to my Portfolio website</h1>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-line"><i class="fa fa-star" aria-hidden="true"></i></div>
